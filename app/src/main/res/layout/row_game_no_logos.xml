<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/lightGray"
    android:layout_width="fill_parent"
    android:layout_height="110dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/homeicon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_shape" />

            <TextView
                android:id="@+id/homelabel"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="SAS"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_alignStart="@id/homeicon"
                android:layout_alignEnd="@id/homeicon"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:id="@+id/awayicon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_shape"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/awaylabel"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="HOU"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_below="@+id/awayicon"
                android:gravity="center"
                android:layout_alignStart="@id/awayicon"
                android:layout_alignEnd="@id/awayicon"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/extraLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/homeicon"
                android:layout_toStartOf="@id/awayicon"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:textSize="20sp"
                android:padding="3dp"
                android:textColor="@color/primaryText"
                android:gravity="center"/>

            <TextView
                android:id="@+id/extraLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/homeicon"
                android:layout_toStartOf="@id/awayicon"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:textSize="15sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/homescore"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/homeicon"
                android:gravity="center"
                android:text="500"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="@color/primaryText"/>

            <TextView
                android:id="@+id/awayscore"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/awayicon"
                android:gravity="center"
                android:text="100"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="@color/primaryText"/>

            <TextView
                android:id="@+id/clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingTop="30dp"
                android:text="12:00"
                android:textColor="@color/secondaryText"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clock"
                android:layout_marginBottom="0dp"
                android:text="4th Qtr"
                android:textColor="@color/secondaryText"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
